[Unit]
Description=Undertone Audio Control Daemon
Documentation=https://github.com/polariscli/Undertone
After=pipewire.service
Wants=pipewire.service

[Service]
Type=simple
ExecStart=%h/.cargo/bin/undertone-daemon
Restart=on-failure
RestartSec=5

# Environment
Environment=RUST_LOG=undertone=info

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
PrivateTmp=true
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

# Allow access to PipeWire socket
ReadWritePaths=%t/pipewire-0
# Allow access to our own socket
ReadWritePaths=%t/undertone
# Allow access to config and data directories
ReadWritePaths=%h/.config/undertone
ReadWritePaths=%h/.local/share/undertone

[Install]
WantedBy=default.target
